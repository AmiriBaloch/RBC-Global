{
  "rewrites": [
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/about/(.*)", "dest": "/index.html" },
    { "src": "/services/(.*)", "dest": "/index.html" },
    { "src": "/ideas/(.*)", "dest": "/index.html" },
    { "src": "/careers", "dest": "/index.html" },
    { "src": "/contact", "dest": "/index.html" },
    { "src": "/team/(.*)", "dest": "/index.html" },
    { "src": "/(.*)", "dest": "/index.html", "status": 200 }
  ]
} 